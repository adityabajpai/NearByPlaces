<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:orientation="horizontal"
            android:padding="0dp"
            android:paddingTop="10dp"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1.3"
                android:padding="10dp"
                android:gravity="center"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="125dp"
                    android:id="@+id/image_Petrol_Pump"
                    android:background="@drawable/petrol"
                    android:layout_height="150dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:padding="10dp"
                android:layout_weight="0.7"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:weightSum="2"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:fontFamily="monospace"
                                android:textStyle="bold"
                                android:id="@+id/petrolPumps_name"
                                android:textColor="#000"
                                android:text="TextView"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <LinearLayout
                                android:layout_width="130dp"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_weight="1"
                                android:padding="2dp"
                                android:weightSum="2">

                                <TextView
                                    android:layout_width="60dp"
                                    android:text="5.0"
                                    android:background="#6DBD13"
                                    android:padding="3sp"
                                    android:textColor="#fff"
                                    android:fontFamily="sans-serif"
                                    android:id="@+id/rating"
                                    android:textStyle="bold"
                                    android:textSize="16dp"
                                    android:gravity="center"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"/>


                                <LinearLayout
                                    android:layout_width="50dp"
                                    android:layout_height="28dp"
                                    android:background="#6DBD13"
                                    android:layout_weight="1">

                                    <ImageView
                                        android:layout_width="20dp"
                                        android:padding="2dp"
                                        android:layout_gravity="center"
                                        android:background="@drawable/ic_star_black_24dp"
                                        android:layout_height="20dp" />

                                </LinearLayout>

                            </LinearLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="(433)"
                                android:paddingLeft="10dp"
                                android:fontFamily="sans-serif"
                                android:layout_gravity="center"
                                android:id="@+id/numberOfUsers"
                                android:layout_weight="1"
                                android:textColor="#666363"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="right"
                        android:layout_weight="1.6">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:visibility="gone"
                            android:id="@+id/grey_favourite"
                            android:background="@drawable/ic_favorite_black_24dp"/>

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:id="@+id/red_favourite"
                            android:background="@drawable/ic_favorite_red_24dp"/>

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textColor="#000"
                    android:fontFamily="monospace"
                    android:id="@+id/petrolPumps_distance"
                    android:padding="3dp"
                    android:text="Distance: 7km"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:paddingVertical="10dp"
                    android:layout_height="wrap_content"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TOILETS"
                        android:fontFamily="monospace"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:padding="2dp"
                        android:layout_marginRight="10dp"
                        android:background="#6DBD13"
                        android:textColor="#fff"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:layout_marginLeft="10dp"
                        android:textStyle="bold"
                        android:fontFamily="monospace"
                        android:gravity="center"
                        android:text="CAFETERIA"
                        android:layout_weight="1"
                        android:background="#E0362A"
                        android:textColor="#fff"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>